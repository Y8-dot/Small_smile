<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b1e6e6"
    tools:context=".activity_father_caries">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="601dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView58"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceso cariogénico"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#001CD4"
                android:background="@color/white"
                android:textSize="35dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="229dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView63"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#01685F"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:text="1) Placa bacteriana" />

                    <TextView
                        android:id="@+id/textView64"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:text="Todos los días se forma sobre los dientes la placa bacteriana. Las bacterias procecsan los restos de alimento formando un ácido que causa la desmineralización del diente, iniciando el proceso de caries." />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/veintitres" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView25"
                    android:layout_width="158dp"
                    android:layout_height="164dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/trece" />

                <LinearLayout
                    android:layout_width="218dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView65"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#01685F"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:text="2) Mancha blanca"
                         />

                    <TextView
                        android:id="@+id/textView66"
                        android:layout_width="214dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="La desmineralización ocasiona manchas blancas y sin brillo en el diente. En esta etapa las caries aún pueden ser revertidas a través del correcto cepillado con crema dental con flúor."
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView67"
                        android:layout_width="219dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="3) Cavitación"
                        android:textColor="#01685F"
                        android:textSize="23dp"
                        android:textAllCaps="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView68"
                        android:layout_width="221dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="La progresión de la etapa anterior genera la cavitación, un agujero en el diente generado por la desmineralización."
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView27"
                    android:layout_width="172dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/_4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView28"
                    android:layout_width="326dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/veinticinco" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginLeft="4dp"
                        android:id="@+id/textView69"
                        android:layout_width="219dp"
                        android:layout_height="wrap_content"
                        android:text="4) Evolución de la caries"
                        android:textColor="#01685F"
                        android:textAllCaps="true"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginLeft="4dp"
                        android:id="@+id/textView70"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:text="En caso de que no haya un tratamiento correcto, esta lesión puede aumentar cada vez más llegando al conducto del diente y causar aún más dolor y daño." />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView71"
                        android:layout_width="252dp"
                        android:layout_height="wrap_content"
                        android:textColor="#01685F"
                        android:layout_marginLeft="8dp"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:text="5)Conducto y absceso dental" />

                    <TextView
                        android:id="@+id/textView72"
                        android:layout_width="252dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:text="Si el tratamiento del conducto no fue realizado, puede evolucionar y formar un absceso o acomulación de pus en la raíz del diente." />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/veintiseis" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/botoncaries"
                android:layout_width="176dp"
                android:layout_height="38dp"
                android:layout_marginTop="8dp"
                android:background="#7C7C7C"
                android:onClick="onClick"
                android:text="Regresar"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>