<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b1e6e6"
    tools:context=".activity_father23">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="601dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#01685F"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="4. Evaluar el riesgo de caries en el niño" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="363dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="209dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="80dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="-Acudir al dentista regularmente"
                        android:textAlignment="gravity"
                        android:textColor="#0A0B0C"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/textView37"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="-Solicitar información al dentista sobre prevención de caries"
                        android:textAlignment="gravity"
                        android:textColor="#0A0B0C"
                        android:textSize="25dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="120dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/button9"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:text="Back" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="179dp"
                    android:layout_marginLeft="70dp"
                    android:layout_height="wrap_content"
                    android:text="Siguiente" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>