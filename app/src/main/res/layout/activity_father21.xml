<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b1e6e6"
    tools:context=".father2_1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:text="2. Evitar actividades en las que haya intercambio de saliva"
                android:textColor="#01685F"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="206dp"
                    android:layout_height="164dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Evitar compartir utensilios de comida entre el infante y su familia."
                    android:textColor="@color/black"
                    android:textSize="25dp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="218dp"
                    android:layout_height="231dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/catorce" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop = "140dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn15"
                    android:layout_width="176dp"
                    android:layout_height="38dp"
                    android:background="#7C7C7C"
                    android:layout_gravity="left"
                    android:onClick="onClick"
                    android:text="Regresar"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.971" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn16"
                    android:layout_width="176dp"
                    android:layout_height="38dp"
                    android:layout_marginHorizontal="60dp"
                    android:background="#7C7C7C"
                    android:onClick="onClick"
                    android:text="Siguiente"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.971" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>